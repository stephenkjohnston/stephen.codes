---
import { MODE, GTM_ID } from "astro:env/client";
import GlobalHeader from "components/GlobalHeader.astro";
import GlobalFooter from "components/GlobalFooter.astro";

import "styles/main.scss";
import GoogleAnalytics from "components/GoogleAnalytics.astro";
import GoogleTagManager from "components/GoogleTagManager.astro";
import GoogleTagManagerBody from "components/GoogleTagManagerBody.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    {MODE === "production" && <GoogleAnalytics />}
    <!-- Google Tag Manager -->
    {MODE === "production" && <GoogleTagManager />}
    <!-- End Google Tag Manager -->
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    {MODE === "production" && <GoogleTagManagerBody />}
    <!-- End Google Tag Manager (noscript) -->
    <div id="application">
      <GlobalHeader />
      <main id="main-content">
        <slot />
      </main>
      <GlobalFooter />
    </div>
  </body>
</html>
