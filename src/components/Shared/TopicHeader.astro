---
interface Props {
  title: string;
  link: string;
  linkText: string;
  summary: string;
}

const { title, link, linkText, summary } = Astro.props;
---

<section class="topic-header">
  <span>[<a href={link}>View All {linkText}</a>]</span>
  <div class="topic-metadata">
    <h1>{title}</h1>
    <p>{summary}</p>
  </div>
</section>
<style lang="scss">
  .topic-header {
    display: flex;
    flex-direction: column;
    margin-block-end: 1rem;
  }

  .topic-metadata {
    margin-block: 0.5rem;
    display: grid;
    align-items: center;
    grid-template-columns: repeat(2, 1fr);

    h1 {
      margin: 0;
      text-transform: uppercase;
    }

    @media (max-width: 48rem) {
      grid-template-columns: 1fr;
    }
  }
</style>
