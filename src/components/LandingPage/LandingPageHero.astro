---
import { Image } from "astro:assets";

import ProfilePicture from "assets/images/profile-picture.png";

const profileLinks = [
  { name: "LinkedIn", url: "https://www.linkedin.com/in/stephenkingjohnston/" },
  { name: "GitHub", url: "https://github.com/stephenkjohnston" },
];
---

<section class="hero" aria-labelledby="hero-title">
  <div class="hero-content">
    <h1 class="hero-content-title" id="hero-title">
      Hi, I'm Stephen. <br />I am a <mark>front-end developer</mark> by trade, and
      an aspiring <mark>mainframe developer</mark>.
    </h1>
    <ul class="hero-content-links">
      {
        profileLinks.map((profileLink) => (
          <li class="hero-content-link">
            <a href={profileLink.url} target="_blank" rel="noopener noreferrer">
              {profileLink.name}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
  <Image
    src={ProfilePicture}
    format="webp"
    alt="Stephen Johnston"
    class="hero-picture"
  />
</section>
<style lang="scss">
  .hero {
    display: flex;
    flex-direction: column-reverse;
    flex-wrap: wrap;
    gap: 0.625rem;
    align-items: center;

    @media (min-width: 48rem) {
      flex-direction: inherit;
      flex-wrap: nowrap;
    }
  }

  .hero-content-title {
    margin: 0;
    font-size: var(--fs-lg);
    font-weight: var(--fw-400);
    line-height: 2;
    text-align: center;

    mark {
      margin-inline: 0.375rem;
      padding-inline: 0.375rem;
      background: var(--clr-blue-70);
      font-style: italic;
      color: var(--clr-white);
      font-weight: var(--fw-700);
      box-shadow: 0.375rem 0.375rem 0 0 var(--clr-gray-100);
    }

    @media (min-width: 48rem) {
      text-align: left;
    }
  }

  .hero-content-links {
    display: flex;
    gap: 0.625rem;
    padding: 0;
    list-style: none;
    place-content: center;

    @media (min-width: 48rem) {
      place-content: start;
    }
  }

  .hero-content-link {
    text-align: center;
  }

  .hero-picture {
    border-radius: 10px;
    width: 200px;
    aspect-ratio: 1;
    object-fit: cover;
  }
</style>
